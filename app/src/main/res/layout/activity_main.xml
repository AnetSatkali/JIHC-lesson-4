<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="55dp"
        android:gravity="right"
        android:paddingRight="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            style="@style/buttonmarks"

            android:text="AC"/>

        <Button
            style="@style/buttonmarks"

            android:text="+/-"/>

        <Button
            style="@style/buttonmarks"

            android:text="%"/>

        <Button
            style="@style/buttonmarks"

            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            android:id="@+id/btn7"
            style="@style/buttonnums"

            android:text="7"

            />

        <Button
            android:id="@+id/btn8"
            style="@style/buttonnums"

            android:text="8"/>

        <Button
            android:id="@+id/btn9"
            style="@style/buttonnums"

            android:text="9"/>

        <Button
            android:id="@+id/btnX"
            style="@style/buttonmarks"

            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            style="@style/buttonnums"

            android:text="4"/>

        <Button
            style="@style/buttonnums"

            android:text="5"/>

        <Button
            style="@style/buttonnums"

            android:text="6"/>

        <Button
            style="@style/buttonmarks"

            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            style="@style/buttonnums"

            android:text="1"/>

        <Button
            style="@style/buttonnums"

            android:text="2"/>

        <Button
            style="@style/buttonnums"

            android:text="3"/>

        <Button
            style="@style/buttonmarks"

            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            style="@style/buttonnums"

            android:text="0"/>

        <Button
            style="@style/buttonnums"

            android:text="."/>

        <Button
            style="@style/buttonmarks"

            android:layout_width="175dp"
            android:text="=" />

    </LinearLayout>


</LinearLayout>